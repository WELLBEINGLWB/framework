cmake_minimum_required(VERSION 2.8.3)
project(crops_main)
# Load catkin and all dependencies required for this package
find_package(catkin REQUIRED COMPONENTS std_msgs roscpp sensor_msgs crops_manipulator_utils diagnostic_msgs diagnostic_updater crops_msgs crops_state_machine tf)

catkin_package()


add_executable(crops_main 
src/main_control_program.cpp 
src/fruitLocState.cpp
src/moveToFruitState.cpp 
src/moveToHomeState.cpp 
src/transportFruitState.cpp
src/selectFruitState.cpp 
src/ReadyState.cpp 
src/ColdBootState.cpp 
)

add_executable(crops_main_pepper 
src/main_control_program_pepper.cpp 
src/Pepper_SelectFruitState.cpp 
src/Pepper_HomeSensorRigState.cpp  
src/Pepper_ColdBootState.cpp 
src/Pepper_DetectFruitState.cpp 
src/Pepper_ErrorState.cpp 
src/Pepper_MoveToVisualServoStartState.cpp
src/Pepper_MoveToFruitState.cpp
src/Pepper_MoveToFruitStartState.cpp
src/Pepper_MoveToHomeState.cpp
src/Pepper_MoveToWaypoint_1.cpp
src/Pepper_MoveToWaypoint_2.cpp    
src/Pepper_ReadyState.cpp 
src/Pepper_CollisionCheckState.cpp 
src/Pepper_MoveToBasketState.cpp 
src/Pepper_MoveArmOutOfWorkspaceState.cpp 
src/Pepper_MoveArmIntoWorkspaceState.cpp 
src/Pepper_MoveSensorsIntoWorkspaceState.cpp 
src/Pepper_MoveSensorsOutOfWorkspaceState.cpp
)

include_directories(include ${catkin_INCLUDE_DIRS} ${Boost_INCLUDE_DIRS})

target_link_libraries(crops_main ${catkin_LIBRARIES})
target_link_libraries(crops_main_pepper ${catkin_LIBRARIES})

add_dependencies(crops_main ${catkin_EXPORTED_TARGETS})
add_dependencies(crops_main_pepper ${catkin_EXPORTED_TARGETS})
