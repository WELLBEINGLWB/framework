/**
 * State for transporting fruit to a basket (after harvest)
 * Basket position is defined in the h-file
 *
 * Author Ola Ringdahl, ringdahl@cs.umu.se
 */

#include "transportFruitState.h"

using std::string;
using std::map;

TransportFruitState::TransportFruitState() :
    SimpleActionState("/p2pAction")
{
  PubManipulatorState = n.advertise<crops_msgs::manipulatorState>("setManipulatorMode", 1000);
  //check if xpc_simulator or xpcTarget Hardware should be used
  ros::param::get("/crops_manipulator_udp/xpc_target", xpc_target_);
  nh_.getParam("fruit_bin_position", bin_location_); //get the pose of the fruit bin
}

TransportFruitState::~TransportFruitState()
{
}

/**
 * Feedback from the arm
 */
void TransportFruitState::feedbackCb(const crops_msgs::p2pFeedbackConstPtr feedback)
{
  ROS_INFO("#GUI Progress: %.0f %%", feedback->progress * 100);
}

/*
 * Execute the action (move to bin)
 */
string TransportFruitState::execute(map<string, boost::any> * data)
{
  string outcome;
  // check that all values are doubles:
  if (first_)
  {
    goal_.goal_pose.position.x = bin_location_[0];
    goal_.goal_pose.position.y = bin_location_[1];
    goal_.goal_pose.position.z = bin_location_[2];
    goal_.goal_pose.orientation.x = bin_location_[3];
    goal_.goal_pose.orientation.y = bin_location_[4];
    goal_.goal_pose.orientation.z = bin_location_[5];
    goal_.goal_pose.orientation.w = bin_location_[6];
    goal_.desired_time = 5;
    goal_.use_hardware = xpc_target_;
    goal_.pathMode = 0;

    ROS_INFO(
        "#GUI TransportFruitState moves to position (%.2f %.2f %.2f) ", goal_.goal_pose.position.x, goal_.goal_pose.position.y, goal_.goal_pose.position.z);
    setFeedbackCallback(boost::bind(&TransportFruitState::feedbackCb, this, _1));
    sendGoal();
    first_ = false;
  }

  actionlib::SimpleClientGoalState current_state_ = ac_.getState();

  switch (current_state_.state_)
  {
    case actionlib::SimpleClientGoalState::SUCCEEDED:
      first_ = true;
      if (ac_.getResult()->reached_goal)
      {
        stat_msg_.fruit_harvested = true;
        ROS_INFO("#GUI Arm has reached fruit bin");
      }
      stat_msg_.start_fruit_clock = "stop";
      stat_pub_.publish(stat_msg_);
      outcome = "Basket";
      break;

    case actionlib::SimpleClientGoalState::PREEMPTED:
      stat_msg_.fruit_missed = true;
      ROS_WARN("#GUI Arm could not reach fruit bin");
      stat_msg_.start_fruit_clock = "stop";
      stat_pub_.publish(stat_msg_);
      outcome = "Out of reach";
      break;

    default:
      outcome = "Transport fruit";
      break;
  }
  return outcome;
}
