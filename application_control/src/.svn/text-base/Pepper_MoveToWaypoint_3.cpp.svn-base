#include "Pepper_MoveToWaypoint_3.h"

using std::string;
using std::map;

Pepper_MoveToWaypoint_3::Pepper_MoveToWaypoint_3() :
    SimpleActionState("/p2pAction")
{
  PubManipulatorState = n.advertise<crops_msgs::manipulatorState>("setManipulatorMode", 1000);
  //check if xpc_simulator or xpcTarget Hardware should be used
  ros::param::get("/crops_manipulator_udp/xpc_target", xpc_target_);
  nh_.getParam("home_position", waypoint_); // use home position for waypoint 3
}

Pepper_MoveToWaypoint_3::~Pepper_MoveToWaypoint_3()
{
}

/**
 * Feedback from the arm
 */
void Pepper_MoveToWaypoint_3::homeFeedbackCb(const crops_msgs::p2pFeedbackConstPtr feedback)
{
  ROS_INFO("#GUI Progress: %.0f %%", feedback->progress * 100);
}

/**
 * Move the arm to 'home' position to move it out of the way of the camera(s)
 */
string Pepper_MoveToWaypoint_3::execute(map<string, boost::any> * data)
{
  string outcome;
  if (first_)
  {
    // check that all values are doubles:
    for (int32_t i = 0; i < waypoint_.size(); ++i)
    {
      ROS_ASSERT(waypoint_[i].getType() == XmlRpc::XmlRpcValue::TypeDouble);
    }
    goal_.goal_pose.position.x = waypoint_[0];
    goal_.goal_pose.position.y = waypoint_[1];
    goal_.goal_pose.position.z = waypoint_[2];
    goal_.goal_pose.orientation.x = waypoint_[3];
    goal_.goal_pose.orientation.y = waypoint_[4];
    goal_.goal_pose.orientation.z = waypoint_[5];
    goal_.goal_pose.orientation.w = waypoint_[6];
    goal_.desired_time = 5;
    goal_.use_hardware = xpc_target_;
    goal_.pathMode = 0;
    ROS_INFO("# GUI Pepper_MoveToWaypoint3 moves to position (%.2f %.2f %.2f) ", goal_.goal_pose.position.x,
             goal_.goal_pose.position.y, goal_.goal_pose.position.z);
    setFeedbackCallback(boost::bind(&Pepper_MoveToWaypoint_3::homeFeedbackCb, this, _1));
    sendGoal();
    //sleep(1);
    first_ = false;
  }

  actionlib::SimpleClientGoalState current_state_ = ac_.getState();

  switch (current_state_.state_)
  {
    case actionlib::SimpleClientGoalState::SUCCEEDED:
      first_ = true;
      if (ac_.getResult()->reached_goal)
      {
        ROS_INFO("#GUI Arm has reached waypoint position");
        (*data)["found_fruit"] = true;
        outcome = "WaypointPositionReached";
      }
      else
      {
        ROS_WARN("#GUI clientState waypoint succeeded!!");
        (*data)["found_fruit"] = false;
      }

      break;

    case actionlib::SimpleClientGoalState::PREEMPTED:
      ROS_WARN("#GUI Arm could not reach waypoint position");
      (*data)["found_fruit"] = false;
      first_ = true;
      outcome = "Error";
      break;

    default:
      outcome = "Moving";
      break;
  }
  return outcome;
}
