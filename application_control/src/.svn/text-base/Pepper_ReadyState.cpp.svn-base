/*
 * Ready state. Should wait in this state until the user starts the system
 * (i.e. do not begin to move the arm before the user says OK)
 */

#include "Pepper_ReadyState.h"

void Pepper_ReadyState::readyMsgCallback(const std_msgs::String::ConstPtr& msg)
{
  ROS_INFO("I heard: [%s]", msg->data.c_str());
  if (msg->data == "Start state machine") // this is not starting the state machine but starting autonomous control
  {
    // The user has requested autonomous control. Lets go!
    selection = "Start";
    // reset statistics and start total time clock (in GUI):
    stat_msg_.reset_stats = true;
    stat_msg_.start_tot_clock = "start";
    stat_pub_.publish(stat_msg_);
    ROS_INFO("#GUI Starting autonomous control");
  }
  else if (msg->data == "Start manual control")
  {
    selection = "WaitingForStart";
    ROS_INFO("#GUI Starting manual control");
  }
  else
    selection = "WaitingForStart";
}

Pepper_ReadyState::Pepper_ReadyState()
{
  selection = "WaitingForStart";
  sub_ = nh_.subscribe("sm_ready_msg", 10, &Pepper_ReadyState::readyMsgCallback, this);
}

std::string Pepper_ReadyState::execute(std::map<std::string, boost::any> * data)
{
  std::string trans = selection;
  selection = "WaitingForStart";
  /*if (trans == "Start"){
	  ROS_INFO("returned Start");
  }*/
  return trans;
}
