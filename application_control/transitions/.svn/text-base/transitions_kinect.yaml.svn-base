- start_state: ColdBoot
- state:
       state_label: ColdBoot
       descriptive_name: Waiting until system ready
       transitions:
            System ready : Ready
            System not ready : ColdBoot
- state:
      state_label: Ready
      descriptive_name: Ready State 
      transitions:
            Not ready : Ready
            Start auto : Move_home
- state:
       state_label: Move_home
       descriptive_name: Move arm to home position
       transitions:
            move to home : Move_home 
            home : Loc_fruits
            Out of reach : Ready
- state:
      state_label: Loc_fruits
      descriptive_name: Localizing fruits
      transitions:
            No fruit : Loc_fruits
            Found fruit : Select_fruit
- state:
      state_label: Select_fruit
      descriptive_name: Selecting fruit to pick
      transitions:
            Fruit selected : Pick_fruit
            All fruits picked : Ready

- state:
      state_label: Pick_fruit
      descriptive_name: Moving arm to fruit
      transitions:
            Move to fruit : Pick_fruit 
            Goal : Fruit_to_basket
            Out of reach : Select_fruit

- state:
      state_label: Fruit_to_basket
      descriptive_name: Transporting fruit to basket
      transitions:
            Transport fruit : Fruit_to_basket
            Basket : Select_fruit
            Out of reach : Select_fruit

